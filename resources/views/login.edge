<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  
</head>
<body>

  <div class="container">
    <form action="{{ route('AuthController.login') }}" method="post">
      {{ csrfField() }}
      <div class="form-group">
        <label for="email">Email</label>
        <input type="text" class="form-control" name="email" value="{{ flashMessages.get('email') || '' }}" />
        <p>{{ flashMessages.get('auth.errors.uid') || '' }}</p>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" class="form-control" />
        <p>{{ flashMessages.get('auth.errors.password') || '' }}</p>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
  
</body>
</html>